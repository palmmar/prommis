@page
@model LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<div class="mx-auto grid max-w-5xl gap-8 lg:grid-cols-[1fr_1fr]">
    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">StegStat</p>
        <h1 class="mt-3 text-3xl font-semibold">Välkommen tillbaka</h1>
        <p class="mt-2 text-slate-600">Logga in för att se dina steg och gruppstatistik.</p>

        <form id="account" method="post" class="mt-6 grid gap-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700" role="alert"></div>
            }

            <div>
                <label asp-for="Input.Email" class="text-sm font-medium text-slate-700">E-post</label>
                <input asp-for="Input.Email" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" autocomplete="username" aria-required="true" placeholder="namn@exempel.se" />
                <span asp-validation-for="Input.Email" class="text-sm text-rose-600"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="text-sm font-medium text-slate-700">Lösenord</label>
                <input asp-for="Input.Password" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" autocomplete="current-password" aria-required="true" placeholder="Lösenord" />
                <span asp-validation-for="Input.Password" class="text-sm text-rose-600"></span>
            </div>

            <label asp-for="Input.RememberMe" class="flex items-center gap-2 text-sm text-slate-600">
                <input class="h-4 w-4 rounded border-slate-300" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>

            <button id="login-submit" type="submit" class="mt-2 rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800">Logga in</button>
        </form>

        <div class="mt-6 text-sm text-slate-600">
            <p>
                <a class="text-accent hover:underline" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Skapa ett konto</a>
            </p>
        </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-lg font-semibold">Annan inloggning</h2>
        <p class="mt-2 text-sm text-slate-600">
            Vi har inte kopplat några externa inloggningar än.
        </p>
        <div class="mt-4 rounded-2xl bg-mist p-4 text-sm text-slate-500">
            När vi lägger till fler alternativ dyker de upp här.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
