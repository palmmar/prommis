@page
@model RegisterModel
@{
    ViewData["Title"] = "Skapa konto";
}

<div class="mx-auto grid max-w-5xl gap-8 lg:grid-cols-[1fr_1fr]">
    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">StegStat</p>
        <h1 class="mt-3 text-3xl font-semibold">Skapa ditt konto</h1>
        <p class="mt-2 text-slate-600">Samla steg, bygg grupper och följ framsteg över tid.</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6 grid gap-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700" role="alert"></div>
            }

            <div>
                <label asp-for="Input.Email" class="text-sm font-medium text-slate-700">E-post</label>
                <input asp-for="Input.Email" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" autocomplete="username" aria-required="true" placeholder="namn@exempel.se" />
                <span asp-validation-for="Input.Email" class="text-sm text-rose-600"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="text-sm font-medium text-slate-700">Lösenord</label>
                <input asp-for="Input.Password" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" autocomplete="new-password" aria-required="true" placeholder="Minst 6 tecken" />
                <span asp-validation-for="Input.Password" class="text-sm text-rose-600"></span>
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="text-sm font-medium text-slate-700">Bekräfta lösenord</label>
                <input asp-for="Input.ConfirmPassword" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" autocomplete="new-password" aria-required="true" placeholder="Bekräfta lösenord" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-rose-600"></span>
            </div>

            <button id="registerSubmit" type="submit" class="mt-2 rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800">Skapa konto</button>
        </form>

        <p class="mt-6 text-sm text-slate-600">
            Har du redan konto?
            <a class="text-accent hover:underline" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Logga in</a>
        </p>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-lg font-semibold">Trygg start</h2>
        <ul class="mt-4 grid gap-3 text-sm text-slate-600">
            <li class="rounded-2xl bg-mist p-4">Håll koll på steg varje dag.</li>
            <li class="rounded-2xl bg-mist p-4">Se utveckling per vecka, månad och år.</li>
            <li class="rounded-2xl bg-mist p-4">Dela totalsummor med gruppen.</li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
