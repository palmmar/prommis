@page
@model Prommis.Pages.Admin.GroupsModel
@{
    ViewData["Title"] = "Alla grupper";
}

<div>
    <h1 class="text-3xl font-semibold">Alla grupper</h1>
    <p class="mt-2 text-slate-600 dark:text-slate-300">Alla grupper i systemet.</p>
</div>

<div class="mt-8 grid gap-4 md:grid-cols-2">
    @if (Model.Groups.Count == 0)
    {
        <div class="rounded-2xl border border-slate-200 bg-white p-6 text-slate-600 dark:border-slate-800 dark:bg-slate-900/80 dark:text-slate-300">Inga grupper finns ännu.</div>
    }
    else
    {
        @foreach (var group in Model.Groups)
        {
            <a class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-slate-800 dark:bg-slate-900/80" asp-page="/Groups/Details" asp-route-id="@group.Id">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold">@group.Name</h2>
                    <span class="rounded-full bg-mist px-3 py-1 text-xs text-slate-600 dark:bg-slate-800/70 dark:text-slate-300">@group.MemberCount medlemmar</span>
                </div>
                <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Ägare: @group.OwnerName</p>
            </a>
        }
    }
</div>
