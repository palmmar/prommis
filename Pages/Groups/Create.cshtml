@page
@model StegStat.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "Ny grupp";
}

<div class="max-w-xl rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
    <h1 class="text-2xl font-semibold">Skapa ny grupp</h1>
    <p class="mt-2 text-slate-600">Ge gruppen ett namn och bjud in deltagare efter√•t.</p>

    <form method="post" class="mt-6 grid gap-4">
        <div>
            <label class="text-sm font-medium text-slate-700">Gruppnamn</label>
            <input asp-for="Name" class="mt-2 w-full rounded-2xl border border-slate-300 px-4 py-2" />
            <span asp-validation-for="Name" class="text-sm text-rose-600"></span>
        </div>
        <button type="submit" class="rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800">Skapa grupp</button>
    </form>
</div>
