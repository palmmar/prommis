@page
@model Prommis.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "Ny grupp";
}

<div class="max-w-xl rounded-3xl border border-slate-200 bg-white p-8 shadow-sm dark:border-slate-800 dark:bg-slate-900/80">
    <h1 class="text-2xl font-semibold">Skapa ny grupp</h1>
    <p class="mt-2 text-slate-600 dark:text-slate-300">Ge gruppen ett namn och bjud in deltagare efter√•t.</p>

    <form method="post" class="mt-6 grid gap-4">
        <div>
            <label class="text-sm font-medium text-slate-700 dark:text-slate-300">Gruppnamn</label>
            <input asp-for="Name" class="mt-2 w-full rounded-2xl border border-slate-300 bg-white px-4 py-2 text-slate-900 dark:border-slate-700 dark:bg-slate-900/70 dark:text-slate-100" />
            <span asp-validation-for="Name" class="text-sm text-rose-600"></span>
        </div>
        <button type="submit" class="rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800 dark:bg-slate-100 dark:text-slate-900 dark:hover:bg-white">Skapa grupp</button>
    </form>
</div>
