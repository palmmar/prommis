@page
@model StegStat.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "Grupper";
}

<div class="flex flex-wrap items-center justify-between gap-3">
    <div>
        <h1 class="text-3xl font-semibold">Dina grupper</h1>
        <p class="mt-2 text-slate-600">Skapa en ny grupp eller öppna en befintlig.</p>
    </div>
    <a class="rounded-full bg-ink px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" asp-page="/Groups/Create">Ny grupp</a>
</div>

<div class="mt-8 grid gap-4 md:grid-cols-2">
    @if (Model.Groups.Count == 0)
    {
        <div class="rounded-2xl border border-slate-200 bg-white p-6 text-slate-600">Du är inte medlem i någon grupp ännu.</div>
    }
    else
    {
        @foreach (var group in Model.Groups)
        {
            <a class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md" asp-page="/Groups/Details" asp-route-id="@group.GroupId">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold">@group.Name</h2>
                    <span class="rounded-full bg-mist px-3 py-1 text-xs text-slate-600">@group.MemberCount medlemmar</span>
                </div>
                <p class="mt-2 text-sm text-slate-500">Ägare: @group.OwnerName</p>
            </a>
        }
    }
</div>
