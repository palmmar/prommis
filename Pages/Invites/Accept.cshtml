@page "/invites/{token}"
@model StegStat.Pages.Invites.AcceptModel
@{
    ViewData["Title"] = "Inbjudan";
}

<div class="max-w-xl rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
    <h1 class="text-2xl font-semibold">Gruppinbjudan</h1>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <p class="mt-4 text-sm text-rose-600">@Model.StatusMessage</p>
    }
    else if (Model.Invite?.Group is not null)
    {
        <p class="mt-4 text-slate-600">
            Du är inbjuden till <span class="font-semibold">@Model.Invite.Group.Name</span>.
        </p>
        <form method="post" class="mt-6">
            <button type="submit" class="rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800">Gå med i gruppen</button>
        </form>
    }
</div>
