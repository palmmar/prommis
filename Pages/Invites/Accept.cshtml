@page "/invites/{token}"
@model StegStat.Pages.Invites.AcceptModel
@{
    ViewData["Title"] = "Inbjudan";
}

<div class="max-w-xl rounded-3xl border border-slate-200 bg-white p-8 shadow-sm dark:border-slate-800 dark:bg-slate-900/80">
    <h1 class="text-2xl font-semibold">Gruppinbjudan</h1>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <p class="mt-4 text-sm text-rose-600 dark:text-rose-300">@Model.StatusMessage</p>
    }
    else if (Model.Invite?.Group is not null)
    {
        <p class="mt-4 text-slate-600 dark:text-slate-300">
            Du är inbjuden till <span class="font-semibold">@Model.Invite.Group.Name</span>.
        </p>
        <form method="post" class="mt-6">
            <button type="submit" class="rounded-full bg-ink px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800 dark:bg-slate-100 dark:text-slate-900 dark:hover:bg-white">Gå med i gruppen</button>
        </form>
    }
</div>
