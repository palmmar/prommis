<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StegStat</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-gradient-to-br from-mist via-white to-fog text-ink">
    <header class="border-b border-slate-200 bg-white/80 backdrop-blur">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
            <div class="flex items-center gap-6">
                <a class="text-lg font-semibold tracking-tight" asp-area="" asp-page="/Index">StegStat</a>
                <nav class="hidden items-center gap-4 text-sm text-slate-600 md:flex">
                    <a class="hover:text-slate-900" asp-area="" asp-page="/Index">Dashboard</a>
                    <a class="hover:text-slate-900" asp-area="" asp-page="/Groups/Index">Grupper</a>
                </nav>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
        @RenderBody()
    </main>

    <footer class="border-t border-slate-200 bg-white/80">
        <div class="mx-auto max-w-6xl px-4 py-6 text-sm text-slate-500">
            &copy; 2026 StegStat
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
