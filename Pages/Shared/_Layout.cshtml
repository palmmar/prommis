<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StegStat</title>

    <script>
        (() => {
            const stored = localStorage.getItem("stegstat-theme");
            const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
            const useDark = stored ? stored === "dark" : prefersDark;
            document.documentElement.classList.toggle("dark", useDark);
        })();
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <style>
        .theme-toggle:focus-visible {
            outline: 2px solid currentcolor;
            outline-offset: 2px;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-mist via-white to-fog text-ink dark:from-slate-950 dark:via-slate-950 dark:to-slate-900 dark:text-slate-100">
    <header class="border-b border-slate-200 bg-white/80 backdrop-blur dark:border-slate-800 dark:bg-slate-950/70">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
            <div class="flex items-center gap-6">
                <a class="text-lg font-semibold tracking-tight" asp-area="" asp-page="/Index">StegStat</a>
                <nav class="hidden items-center gap-4 text-sm text-slate-600 dark:text-slate-300 md:flex">
                    <a class="hover:text-slate-900 dark:hover:text-white" asp-area="" asp-page="/Index">Dashboard</a>
                    <a class="hover:text-slate-900 dark:hover:text-white" asp-area="" asp-page="/Groups/Index">Grupper</a>
                </nav>
            </div>
            <div class="flex items-center gap-3">
                <button class="theme-toggle inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white/70 px-3 py-1 text-xs font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900 dark:border-slate-800 dark:bg-slate-900/70 dark:text-slate-200 dark:hover:border-slate-600 dark:hover:text-white" type="button" id="theme-toggle" aria-pressed="false">
                    <span class="theme-toggle-icon" aria-hidden="true">☾</span>
                    <span class="theme-toggle-label">Mörkt läge</span>
                </button>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
        @RenderBody()
    </main>

    <footer class="border-t border-slate-200 bg-white/80 dark:border-slate-800 dark:bg-slate-950/70">
        <div class="mx-auto max-w-6xl px-4 py-6 text-sm text-slate-500 dark:text-slate-400">
            &copy; 2026 StegStat
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        (() => {
            const toggle = document.getElementById("theme-toggle");
            if (!toggle) return;
            const label = toggle.querySelector(".theme-toggle-label");
            const icon = toggle.querySelector(".theme-toggle-icon");

            const applyTheme = (isDark) => {
                document.documentElement.classList.toggle("dark", isDark);
                toggle.setAttribute("aria-pressed", String(isDark));
                if (label) label.textContent = isDark ? "Ljust läge" : "Mörkt läge";
                if (icon) icon.textContent = isDark ? "☀" : "☾";
            };

            const stored = localStorage.getItem("stegstat-theme");
            const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
            const initialDark = stored ? stored === "dark" : prefersDark;
            applyTheme(initialDark);

            toggle.addEventListener("click", () => {
                const isDark = !document.documentElement.classList.contains("dark");
                localStorage.setItem("stegstat-theme", isDark ? "dark" : "light");
                applyTheme(isDark);
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
